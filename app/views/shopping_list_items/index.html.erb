<p id="notice"><%= notice %></p>

<h1>Shopping List Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Collected</th>
      <th>Shopping list</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_list_items.each do |shopping_list_item| %>
      <tr>
        <td><%= shopping_list_item.name %></td>
        <td><%= shopping_list_item.amount %></td>
        <td><%= shopping_list_item.collected %></td>
        <td><%= shopping_list_item.shopping_list_id %></td>
        <td><%= shopping_list_item.user_id %></td>
        <td><%= link_to 'Show', shopping_list_item %></td>
        <td><%= link_to 'Edit', edit_shopping_list_item_path(shopping_list_item) %></td>
        <td><%= link_to 'Destroy', shopping_list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

