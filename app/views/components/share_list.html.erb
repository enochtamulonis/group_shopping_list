<%= turbo_frame_tag dom_id(@shopping_list) do %>
  <div class="w-full flex px-4 py-2">
    <h2 class="text-center">Share this link or the room code</h2>
    <%= link_to @shopping_list, class: "ml-auto" do %>
      <i class="fa fa-times"></i>
    <% end %>
  </div>
  <div class="flex">
    <input type="text" class="w-1/2" value="<%= shopping_list_url(@shopping_list)+ "?key=" + @shopping_list.random_key %>" readonly>
    <input type="text" class="w-1/2" value="<%= @shopping_list.random_key %>" readonly>
  </div>
<% end %>
