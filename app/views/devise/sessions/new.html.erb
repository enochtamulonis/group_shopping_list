<div class="w-full md:w-3/4 mx-auto bg-gray-300 px-8 py-4" data-controller="authentication-form">

  <h2 class="text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: "false" }) do |f| %>
  
    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full", data: {authentication_form_target: "passwordField"}  %>
    </div>
    <div class="flex">
      <div class="flex items-center my-2 mr-4">
        <input class="mr-2" type="checkbox" data-action="authentication-form#togglePasswordVisibility">Show Password
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, :class => "mr-2" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit "Log in", :class => "bg-transparent px-4 py-1 border-2 border-gray-600 cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
